<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bisque">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center"
        android:background="@color/mediumblue"
        android:textSize="35px"
        android:textColor="@color/white"
        android:text="添加用户档案"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="180px"
        android:layout_marginLeft="180px"
        android:layout_marginTop="50px"
        android:orientation="vertical"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电表地址："
                android:textSize="30px"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/add_meteraddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入电表地址"
                android:inputType="number"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电表编号："
                android:textSize="30px"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/add_meterid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入电表编号"
                android:inputType="number"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户编号："
                android:textSize="30px"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/add_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户编号"
                android:inputType="number"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户地址："
                android:textSize="30px"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/add_useraddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户地址"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    门牌号："
                android:textSize="30px"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/add_doornum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="请输入门牌号"
                />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginBottom="50px"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/customdialog_adduserfile_add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100px"
            android:textColor="@color/black"
            android:padding="15px"
            android:background="@color/lightgrey"
            android:textSize="30px"
            android:text="取消"/>
        <Button
            android:id="@+id/customdialog_adduserfile_add_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="15px"
            android:background="@color/lightgrey"
            android:textSize="30px"
            android:text="确定"/>
    </LinearLayout>


</LinearLayout>